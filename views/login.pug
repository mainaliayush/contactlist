doctype html
html
  head
    title Sign in
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
  body
    .container.mx-auto.mt-5
      .row.justify-content-center
        .col-sm-8.col-md-6.col-lg-4
          h1.my-7 Sign in
          form(action="/login", method="POST")
            .form-group
              label(for="username") Username:
              input#username.form-control.col-12(type="text", name="userName", required)
            .form-group
              label(for="password") Password:
              input#password.form-control.col-12(type="password", name="password", required)
            button.btn.btn-primary(type="submit") Sign in
            a.ml-5.mt-2(href="/") Nevermind
            p.mt-3
              | Don't have an account yet?
              br
              a(href="/signup") Sign up here!
            if error
              p.text-center(style="color: red; margin-top: 10px;")= error
